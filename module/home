<?php 

   $input_cari = @$_POST['input_cari']; 
   $cari = @$_POST['cari'];

   // jika tombol cari di klik
   if($cari) {

    // jika kotak pencarian tidak sama dengan kosong
    if($input_cari != "") {
    // query mysql untuk mencari berdasarkan siteID
    $query = mysql_query("select * from site where SiteID like '%$input_cari%'") or die (mysql_error());   
    } else {
    $query = mysql_query("select * from transportdb") or die (mysql_error());
    }
    } 

   // mengecek data
   $cek = mysql_num_rows($query);
   // jika data kurang dari 1
   if($cek < 1) {
    ?>
     <tr> 
      <td colspan="7" align="center style="padding:10px;""> Data Tidak Ditemukan</td>
     </tr>
    <?php
   } else {

   // mengulangi data agar tidak hanya 1 yang tampil
   while($data = mysql_fetch_array($query)) {

   ?>
   <tr>

    <td><?php echo $data['ID'] ?></td>
    <td><?php echo $data['SysID'] ?></td>
     <td><?php echo $data['NEID'] ?></td>
      <td><?php echo $data['NEName'] ?></td>
    <td><?php echo $data['FEID'] ?></td>
    <td><?php echo $data['FEName'] ?></td>
    <td><?php echo $data['EqpDetail'] ?></td>
   </tr>
  <?php 

  } 
 }
?>
		</table>		
